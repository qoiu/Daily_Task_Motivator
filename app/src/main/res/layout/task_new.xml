<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_title"
                style="@style/CenteredView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Title" />


            <EditText
                android:id="@+id/edit_body"
                style="@style/CenteredView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Description" />

            <EditText
                android:id="@+id/edit_reward"
                style="@style/CenteredView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Reward"
                android:inputType="number" />

            <EditText
                android:id="@+id/edit_progress"
                style="@style/CenteredView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Max value"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/edit_daily"
                style="@style/CenteredView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily task" />

            <LinearLayout
                android:id="@+id/edit_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/CenteredView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deadline" />

                <EditText
                    android:id="@+id/edit_deadline"
                    style="@style/CenteredView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="31/01/2022"
                    android:inputType="date" />

                <TextView
                    style="@style/CenteredView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expire date" />

                <EditText
                    android:id="@+id/edit_expire"
                    style="@style/CenteredView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="31/01/2022"
                    android:inputType="date" />
            </LinearLayout>

        </LinearLayout>

        <CalendarView
            android:id="@+id/calendarView"
            style="@style/CenteredView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginHorizontal="8dp"
            android:text="OK" />

        <Button
            android:id="@+id/edit_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginHorizontal="8dp"
            android:text="Cancel" />

    </LinearLayout>

</LinearLayout>